<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WisdomWell - Share & Discover Inspirational Quotes</title>
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100&family=Roboto:wght@100;400;700&display=swap" rel="stylesheet">
    <!-- External CSS -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>WisdomWell</h1>
            <p class="tagline">Share and discover words that inspire</p>
        </header>

        <section class="add-quote">
            <h2>Add a Quote</h2>
            <p>Share your favorite motivational quote with the world!</p>
            <form action="/addQuotes" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="Author's Name" name="name" required>
                    <input type="text" placeholder="Quote" name="quote" required>
                    <button type="submit">Add Quote</button>
                </div>
            </form>
        </section>

        <section class="quotes">
            <h2>Quotes Collection</h2>
            <div class="quotes-list">
                <% for(let i = 0; i < quotes.length; i++) {%>
                    <div class="quote-card" data-id="<%= quotes[i]._id.toString() %>" data-author-id="<%= quotes[i].authorId %>">
                        <div class="quote-content">
                            <p class="quote-text">"<%= quotes[i].quote %>"</p>
                            <p class="quote-author">- <%= quotes[i].name %></p>
                        </div>
                        <div class="quote-actions">
                            <button class="like-btn" title="Like this quote">
                                <i class="fas fa-heart"></i>
                                <span class="likes-count"><%= quotes[i].likes %></span>
                            </button>
                            <button class="edit-btn" title="Edit this quote">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="delete-btn" title="Delete this quote">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Edit Modal -->
        <div id="editModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Edit Quote</h2>
                <form id="editForm">
                    <input type="hidden" id="editId">
                    <div class="form-group">
                        <input type="text" id="editName" placeholder="Author's Name" required>
                        <input type="text" id="editQuote" placeholder="Quote" required>
                        <button type="submit">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="message"></div>
    <script src="/main.js"></script>
</body>
</html>